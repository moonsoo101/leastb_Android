<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample_back">
   <FrameLayout
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:layout_marginBottom="30dp"
       android:layout_marginLeft="50dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true">
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/play_back"
          android:visibility="invisible"
          android:background="@drawable/oval_background"/>
      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:id="@+id/play_area"
          android:layout_gravity="center"
          android:background="@drawable/ic_play_circle_outline_black_24dp"/>
   </FrameLayout>
   <FrameLayout
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:id="@+id/Btn_drag_cont"
       android:layout_marginBottom="25dp"
       android:background="@drawable/oval_drag_background"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true">
   <ImageView
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:id="@+id/Btn_drag"
       android:src="@drawable/ic_settings_ethernet_black_24dp"
       android:elevation="10dp"
       android:layout_gravity="center"/>
   </FrameLayout>
   <FrameLayout
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:layout_marginBottom="30dp"
       android:layout_marginRight="50dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true">
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/unlock_back"
          android:visibility="invisible"
          android:background="@drawable/oval_background"/>
   <ImageView
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:id="@+id/unlock_area"
       android:layout_gravity="center"
       android:background="@drawable/ic_lock_open_black_24dp"/>
   </FrameLayout>
</RelativeLayout>